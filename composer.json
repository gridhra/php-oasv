{
    "name": "yiegle/php-oasv",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Yiegle\\Oasv\\": "src/"
        }
    },
    "authors": [
        {
            "name": "yiegle",
            "email": "aquila.minakami@gmail.com"
        }
    ],
    "require": {
        "symfony/yaml": "^6.2",
        "league/openapi-psr7-validator": "^0.22.0",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "brainmaestro/composer-git-hooks": "^2.8 || ^3.0",
        "vimeo/psalm": "^5.25"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test-g": "./vendor/bin/phpunit --group",
        "fix": "./vendor/bin/phpcbf --standard=PSR12 ./src ./tests",
        "fix-dry": "./vendor/bin/phpcs --standard=PSR12 ./src ./tests",
        "psalm": "./vendor/bin/psalm",
        "apply-git-hooks": "./vendor/bin/cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "for FILE in `git diff --staged --name-only | grep .php`; do",
                "if [ -e $FILE ]; then",
                "composer fix -- $FILE",
                "git add $FILE",
                "fi",
                "done"
            ]
        }
    }
}
